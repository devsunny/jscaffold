<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                #{ENTITY_LABEL}
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body" ng-controller="#{ENTITY_NAME}DrilldownCtrl">
                <div class="dataTable_wrapper">
					
					<form class="form-inline pull-right">
						<div class="form-group">
							<label>Search</label> <input type="text" ng-model="search"
								class="form-control" placeholder="Search">
						</div>
					</form>
				</div>
                <div class="dataTable_wrapper" ng-init="query()">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-#{ENTITY_VAR_NAME}">
                        <thead>                            
                            <tr>
                                #{TABLE_HEADER}
                            </tr>
                        </thead>
                        <tbody>                            
                           <tr dir-paginate="listItem in #{ENTITY_VAR_NAME} |filter:search |itemsPerPage:#{ITEMS_PER_PAGE}">
                                #{TABLE_BODY}
                            </tr>
                        </tbody>
                    </table>
                    <div class="container">     
					    <div class="span12">      
					       <dir-pagination-controls
								max-size="#{ITEMS_PER_PAGE}"
								direction-links="true"
								boundary-links="true" >
							</dir-pagination-controls>
					    </div> 
					</div>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-6 -->
</div>
