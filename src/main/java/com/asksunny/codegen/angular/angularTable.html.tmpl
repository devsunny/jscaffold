<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                #{ENTITY_LABEL}
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body" ng-controller="#{ENTITY_NAME}Ctrl">
                <div class="dataTable_wrapper" ng-init="query()">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-#{ENTITY_VAR_NAME}">
                        <thead>                            
                            <tr>
                                #{TABLE_HEADER}
                            </tr>
                        </thead>
                        <tbody>                            
                           <tr ng-repeat="listItem in #{ENTITY_VAR_NAME}">
                                #{TABLE_BODY}
                            </tr>
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-6 -->
</div>
